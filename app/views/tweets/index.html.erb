

<div class="panel panel-default">
  <div class="panel-Heading">
    <h1>Recent Tweets</h1>

  </div>
  <div class="panel-body">
    <div class="row">
      <% @tweets.each do |tweet| %>
      <div class="col-md-12">
        <div class="well">

            <p>
              <strong><%=link_to tweet.user.name, user_profile_path(id: tweet.user.id) %></strong>
              <span class="subtle">
                <%= tweet.user.username %>
                <span class="glyphicon glyphicon-menu-right"></span>
                <%= time_ago_in_words(tweet.created_at) %> ago
              </span>
            </p>
            <p>
              <%= tweet.message %>
            </p>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
